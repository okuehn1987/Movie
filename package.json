{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently -k -c \"green,red,grey.bold\" \"npm run dev:vite\" \"php artisan serve\" --names=vite,laravel",
        "dev:vite": "vite",
        "backend": "php artisan serve",
        "test": "playwright test",
        "test-debug": "playwright test --debug",
        "test-ui": "playwright test --ui",
        "build": "vue-tsc && vite build",
        "reset": "php artisan migrate:fresh --seed",
        "r": "php artisan migrate:fresh --seed",
        "typegen": "php artisan ziggy:generate --types",
        "lint": "npx eslint resources/js",
        "testCoverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-clover test-reports/cov.xml",
        "websocket": "php artisan reverb:start"
    },
    "devDependencies": {
        "@inertiajs/vue3": "2.1.5",
        "@playwright/test": "1.55.0",
        "@types/luxon": "3.7.1",
        "@types/sanitize-html": "2.13.0",
        "@types/showdown": "2.0.6",
        "@vitejs/plugin-vue": "5.2.4",
        "@vue/eslint-config-typescript": "12.0.0",
        "axios": "1.11.0",
        "concurrently": "9.2.1",
        "eslint-plugin-vue": "9.33.0",
        "husky": "9.1.7",
        "laravel-echo": "1.16.1",
        "laravel-vite-plugin": "1.3.0",
        "pusher-js": "8.3.0",
        "typescript": "5.9.2",
        "vite": "5.4.20",
        "vite-plugin-vuetify": "2.1.2",
        "vue": "3.5.21",
        "vue-tsc": "2.2.12",
        "vuetify": "3.10.0"
    },
    "dependencies": {
        "@mdi/font": "7.4.47",
        "luxon": "3.7.2",
        "sanitize-html": "2.13.1",
        "sass": "1.79.5",
        "showdown": "2.1.0",
        "vite-plugin-pwa": "1.0.3",
        "ziggy-js": "2.5.3"
    }
}
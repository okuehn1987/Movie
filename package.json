{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently -k -c \"green,red,grey.bold\" \"npm run dev:vite\" \"php artisan serve\" --names=vite,laravel",
        "dev:vite": "vite",
        "backend": "php artisan serve",
        "test": "playwright test",
        "test-debug": "playwright test --debug",
        "test-ui": "playwright test --ui",
        "build": "vue-tsc && vite build",
        "reset": "php artisan migrate:fresh --seed",
        "typegen": "php artisan ziggy:generate --types",
        "lint": "npx eslint resources/js",
        "testCoverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-clover test-reports/cov.xml"
    },
    "devDependencies": {
        "@inertiajs/vue3": "^2.0.0",
        "@playwright/test": "^1.49.1",
        "@tailwindcss/forms": "^0.5.3",
        "@types/luxon": "^3.4.2",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vue/eslint-config-typescript": "^12.0.0",
        "autoprefixer": "^10.4.12",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "eslint-plugin-vue": "^9.18.1",
        "husky": "^9.1.6",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.2.1",
        "typescript": "^5.5.3",
        "vite": "^5.4.5",
        "vite-plugin-vuetify": "^2.0.4",
        "vue": "^3.4.0",
        "vue-tsc": "^2.0.24",
        "vuetify": "^3.7.1"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "luxon": "^3.5.0",
        "ziggy-js": "^2.3.0"
    }
}
